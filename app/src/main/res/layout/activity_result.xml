<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chakl_tarc.loancalculator.Result">

    <TextView
        android:id="@+id/textViewLoanResult"
        android:layout_width="276dp"
        android:layout_height="31dp"
        android:text="                 "
        android:textSize="24sp"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewInterestResult"
        android:layout_marginLeft="192dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textViewMonthlyResult"
        android:layout_width="276dp"
        android:layout_height="31dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="82dp"
        android:text="                 "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoanResult"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textViewInterestResult"
        android:layout_width="276dp"
        android:layout_height="31dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="82dp"
        android:text="                 "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoanStatusResult"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textViewLoanStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="192dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textViewLoanStatusResult"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Loan Status"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="-33dp" />

    <TextView
        android:id="@+id/textViewLoanStatusResult"
        android:layout_width="276dp"
        android:layout_height="31dp"
        android:layout_marginLeft="192dp"
        android:text="                 "
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="145dp"
        android:onClick="closeActivity"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="145dp" />

    <TextView
        android:id="@+id/textViewInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-27dp"
        android:layout_marginLeft="192dp"
        android:text="Total Interest (RM)"
        app:layout_constraintBottom_toTopOf="@+id/textViewInterestResult"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textViewLoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-28dp"
        android:layout_marginLeft="192dp"
        android:text="Total Loan (RM)"
        app:layout_constraintBottom_toTopOf="@+id/textViewLoanResult"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/textViewMonthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Repayment (RM)"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textViewMonthlyResult"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="-23dp"
        app:layout_constraintLeft_toLeftOf="@+id/textViewMonthlyResult"
        android:layout_marginLeft="142dp" />
</android.support.constraint.ConstraintLayout>
